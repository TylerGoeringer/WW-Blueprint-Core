    <Content Include="Conditions\Builder\NewEx\ConditionsCheckerBuilderNewEx.cs" />
    <Content Include="Conditions\New\IsDemoralizeAction.cs" />
    <Content Include="Conditions\New\TargetInMeleeRange.cs" />
    <Content Include="Conditions\ConditionsCheckerBuilder.cs" />
    <Content Include="Fixes\RuleTempModifierTooltips.cs" />
    <Content Include="Utils\Constants.cs" />
    <Content Include="Utils\ContextDuration.cs" />
    <Content Include="Utils\ContextValues.cs" />
    <Content Include="Utils\ElementTool.cs" />
    <Content Include="Utils\Extensions.cs" />
    <Content Include="Utils\LogWrapper.cs" />
    <Content Include="Utils\PrereqTools.cs" />
    <Content Include="Utils\Validator.cs" />
    <Content Include="Main.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Aze.Publicise.MSBuild.Task" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <Target Name="Publicise" AfterTargets="Clean">
    <ItemGroup>
      <Assemblies Include="$(WRATH_DIR)\Wrath_Data\Managed\*.dll; $(WRATH_DIR)\Wrath_Data\Managed\UnityModManager\UnityModManager.dll" />
      <PubliciseInputAssemblies Include="..\Assemblies\Assembly-CSharp.dll" />
      <PrivateAssembly Include="..\Assemblies\Assembly-CSharp_public.dll" />
      <PublicAssembly Include="..\Assemblies\Assembly-CSharp.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(Assemblies)" DestinationFolder="..\Assemblies" />
    <Publicise InputAssemblies="@(PubliciseInputAssemblies)" OutputPath="..\Assemblies\" PubliciseCompilerGenerated="true" />
    <Move SourceFiles="@(PrivateAssembly)" DestinationFiles="@(PublicAssembly)" />
  </Target>
  <Target Name="Deploy" AfterTargets="Build">
    <ItemGroup>
      <ModFiles Include="..\Blueprint-Core\bin\Debug\net4.7.1\Blueprint-Core.dll; ..\Blueprint-Core\bin\Debug\net4.7.1\Info.json" />
    </ItemGroup>
    <Copy SourceFiles="@(ModFiles)" DestinationFolder="$(WRATH_DIR)\Mods\BlueprintCore" />
  </Target>
</Project>