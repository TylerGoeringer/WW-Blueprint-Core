    <Content Include="Actions\Builder\BasicEx\ActionListBuilderBasicEx.cs" />
    <Content Include="Actions\Builder\ContextEx\ActionListBuilderContextEx.cs" />
    <Content Include="Actions\Builder\KingdomEx\ActionListBuilderKingdomEx.cs" />
    <Content Include="Actions\Builder\MiscEx\ActionListBuilderMiscEx.cs" />
    <Content Include="Actions\Builder\NewEx\ActionListBuilderNewEx.cs" />
    <Content Include="Actions\Builder\StoryEx\ActionListBuilderStoryEx.cs" />
    <Content Include="Actions\Builder\UpgraderEx\ActionListBuilderUpgraderEx.cs" />
    <Content Include="Actions\Builder\ActionListBuilder.cs" />
    <Content Include="Actions\New\SwitchToDemoralizeTarget.cs" />
    <Content Include="Actions\Patches\DemoralizePatch.cs" />
    <Content Include="Blueprints\Abilities\AbilityConfigurator.cs" />
    <Content Include="Blueprints\Buffs\BuffConfigurator.cs" />
    <Content Include="Blueprints\Classes\Selection\FeatureSelectionConfigurator.cs" />
    <Content Include="Blueprints\Classes\CommonFeatureConfigurator.cs" />
    <Content Include="Blueprints\Classes\FeatureConfigurator.cs" />
    <Content Include="Blueprints\Components\ContextRankConfigEx.cs" />
    <Content Include="Blueprints\Facts\BlueprintUnitFactConfigurator.cs" />
    <Content Include="Blueprints\BlueprintConfigurator.cs" />
    <Content Include="Blueprints\BlueprintTool.cs" />
    <Content Include="Conditions\Builder\ConditionsCheckerBuilder.cs" />
